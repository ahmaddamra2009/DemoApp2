@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form asp-action="Edit" method="post">
    @Html.HiddenFor(x=>x.EmployeeId) 
    <table class="table table-bordered">
        
        <tr>
            <td> <label asp-for="Name"></label> </td>
            <td> <input asp-for="Name" class="form-control" /> </td>
        </tr>
        <tr>
            <td> <label asp-for="Email"></label> </td>
            <td> <input asp-for="Email" class="form-control" /> </td>
        </tr>
        <tr>
            <td> <label asp-for="Salary"></label> </td>
            <td> <input asp-for="Salary" class="form-control" /> </td>
        <tr>
            <td> <label asp-for="HDate"></label> </td>
            <td> <input asp-for="HDate" class="form-control" /> </td>
        </tr>
        <tr>
            <td> <label asp-for="IsActive"></label> </td>
            <td> <input asp-for="IsActive" class="form-check-input" />Is Active </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Update" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Cancel</a>
            </td>
        </tr>
    </table>
</form>