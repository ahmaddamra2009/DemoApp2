@model UserEmployeeViewModel
@{
    ViewData["Title"] = "AllData";
}

<h1>Employee</h1>
<table class="table table-bordered">
    <tr>
        <td>
            @Html.DisplayNameFor(x => x.Employees.First().Name)
        </td>
        <td>
            @Html.DisplayNameFor(x => x.Employees.First().Email)
        </td>
    </tr>
    @foreach (var emp in Model.Employees)
    {
        <tr>
            <td> @emp.Name </td>
            <td> @emp.Email </td>
        </tr>
    }
</table>

<h1>Users</h1>

<table class="table table-bordered">
    <tr>
        <td>
            @Html.DisplayNameFor(x => x.Users.First().UserName)
        </td>
    </tr>

    @foreach (var emp in Model.Users)
    {
        <tr>
            <td> @emp.UserName </td>
        </tr>
    }
</table>

<h1>Departments</h1>

<table class="table table-bordered">
    <tr>
        <td>
            Name
        </td>
    </tr>

    @foreach (var emp in ViewBag.depts)
    {
        <tr>
            <td> @emp.DepartmentName </td>
        </tr>
    }
</table>


@await Component.InvokeAsync("Employee") 